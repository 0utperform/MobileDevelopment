<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Material Theme (Light Mode) -->
    <style name="Base.Theme._0utPerform" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="Widget.OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="textFillColor">@color/black</item>
    </style>

    <style name="Theme.Dashboard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/brandBlueNight</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/brandBlueNight</item>
        <item name="colorPrimaryVariant">@color/brandBlueNight</item>
        <item name="colorControlHighlight">@color/brandBlueNight</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <style name="CustomActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/brandBlueNight</item>
        <item name="android:elevation">4dp</item>
    </style>
    <!-- Custom CardView Style -->
    <style name="CustomMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/brandBlueNight</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="CircleShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>