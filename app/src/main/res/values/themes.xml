<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Material Theme (Light Mode) -->
<style name="Base.Theme._0utPerform" parent="Theme.MaterialComponents.DayNight.NoActionBar">

</style>

    <style name="CalendarDateStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Widget.OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="textFillColor">@color/black</item>
    </style>


    <style name="Theme.Dashboard" parent="Theme.MaterialComponents.Light">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/brandBlue</item>
        <item name="colorPrimaryVariant">@color/brandBlue</item>
        <item name="colorControlHighlight">@color/brandBlue</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <style name="CustomActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/brandBlue</item>
        <item name="android:elevation">4dp</item>
    </style>
<!-- Custom CardView Style -->
<style name="CustomMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
    <item name="strokeColor">@color/brandBlue</item>
    <item name="strokeWidth">2dp</item>
    <item name="cardElevation">4dp</item>
    <item name="cornerRadius">12dp</item>
</style>

<style name="CircleShape" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
</style>

</resources>