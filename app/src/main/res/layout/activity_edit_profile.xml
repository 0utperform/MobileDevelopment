<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="4dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="Name"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter name"
                android:background="@drawable/task_input_background"
                android:padding="12dp" />

            <!-- Age -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="Age"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                android:hint="Enter age"
                android:background="@drawable/task_input_background"
                android:padding="12dp" />

            <!-- Role (Disabled) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <EditText
                android:id="@+id/etRole"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Your role"
                android:background="@drawable/task_input_background"
                android:padding="12dp"
                android:enabled="false"
                android:textColorHint="#888888" />

            <!-- Payroll (Disabled) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payroll"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <EditText
                android:id="@+id/etPayroll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="numberDecimal"
                android:hint="Your payroll"
                android:background="@drawable/task_input_background"
                android:padding="12dp"
                android:enabled="false"
                android:textColorHint="#888888" />

            <!-- Team (Disabled) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <EditText
                android:id="@+id/etTeam"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Your team"
                android:background="@drawable/task_input_background"
                android:padding="12dp"
                android:enabled="false"
                android:textColorHint="#888888" />

            <!-- Outlet (Disabled) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outlet"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <EditText
                android:id="@+id/etOutlet"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Your outlet"
                android:background="@drawable/task_input_background"
                android:padding="12dp"
                android:enabled="false"
                android:textColorHint="#888888" />

            <!-- Confirm Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Edit"
                android:layout_marginTop="16dp"
                app:cornerRadius="16dp"
                android:theme="@style/Theme.Dashboard"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
